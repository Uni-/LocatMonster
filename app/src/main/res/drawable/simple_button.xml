<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@android:color/darker_gray">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="3dp" android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false" android:color="@android:color/black">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="3dp" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true" android:state_focused="false" android:color="@android:color/white">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <stroke android:width="3dp" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="true" android:color="@android:color/black">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true" android:state_focused="true" android:color="@android:color/white">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
        </shape>
    </item>
</selector>