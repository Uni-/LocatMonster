<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SimpleBox">
        <item name="android:background">@drawable/simple_box</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="SimpleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/simple_button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@drawable/simple_button</item>
    </style>

</resources>
