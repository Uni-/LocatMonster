<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LocatMonster 위치기반 서비스"
            android:id="@+id/activity_main_switch_service" />

        <Button
            android:id="@+id/activity_main_button_start_map"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="지도" />

        <Button
            android:id="@+id/activity_main_button_start_battle_control"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="수동전투" />

        <Button
            android:id="@+id/activity_main_button_start_character_gallery"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="보유 캐릭터 목록" />

        <Button
            android:id="@+id/activity_main_button_refresh_location"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="[Test] Refresh Location" />

        <Button
            android:id="@+id/activity_main_button_clear_log"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="[Test] Clear Log" />

        <Button
            android:id="@+id/activity_main_button_new_noti"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="[Test] Change Value" />

        <TextView
            android:id="@+id/activity_main_text_helloworld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <net.aurynj.rne.locatmonster.widget.CharacterBriefStatusView
            android:id="@+id/activity_main_view_character_brief_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
