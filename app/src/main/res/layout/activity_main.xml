<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/activity_main_button_start_map"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Map" />

        <Button
            android:id="@+id/activity_main_button_refresh_location"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Refresh Location" />

        <Button
            android:id="@+id/activity_main_button_clear_log"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Clear Log" />

        <Button
            android:id="@+id/activity_main_button_bind_service"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Bind Service" />

        <Button
            android:id="@+id/activity_main_button_unbind_service"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Unbind Service" />

        <Button
            android:id="@+id/activity_main_button_start_service"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Start Service" />

        <Button
            android:id="@+id/activity_main_button_stop_service"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Stop Service" />

        <Button
            android:id="@+id/activity_main_button_new_noti"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="New Noti" />

        <TextView
            android:id="@+id/activity_main_text_helloworld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
    </LinearLayout>
</ScrollView>
